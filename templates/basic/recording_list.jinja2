{% extends "basic/base.jinja2" %}
{% block title %} Recordings {% endblock %}
{% block body %}
<div id="show-container" class="container">
    <div class="row">
        <div class="col-md-12">
            <h1> Recordings </h1>
            <div>
                <p>
                    These some of the recordings that have been discovered over the years.
                    There are many more to come, so stay put.
                </p>
            </div>
            <div>
                <table id="recording_table" class="table table-hover">
                    <thead>
                    <tr>
                        <th>Description</th>
                        <th>Primary Media Type</th>
                    </tr>
                    </thead>
                    <tbody id="$recording_table_content">
                    {% for recording in recording_list %}
                    <tr>
                        <td><a href="{{request.route_url('render_recording', recording_id=recording['recording_url_id'])}}">{{recording['desc']}}</a></td>
                        <td>{{ recording['primary'] }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascript %}
<script type="text/javascript">
    live_recordings.recordingRedirect();
</script>
{% endblock %}
