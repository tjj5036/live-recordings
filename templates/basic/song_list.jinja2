{% extends "basic/base.jinja2" %}
{% block title %}All Songs for {{ artist }} {% endblock %}
{% block body %}
<div id="song-list-container" class="container">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-condensed">
            <thead>
                <tr>
                    <td>Top Songs:</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
            {% for song in songs %}
                <tr>
                    <td> <a href="{{ request.route_url('artist_song', artist_id=artist_url, song_title=song['song_id'])}}">{{ song['title'] }}</a> 
                    </td>
                    <td>
                        <div class="progress-bar progress-bar-success" role="progressbar", aria-valuenow="{{ song['song_count'] }}" aria-valuemin="0" aria-valuemax="{{ max_count }}" style="width: {{ (song['song_count'] / max_count) * 100 |float}}%">
                        <span class="sr-only">{{ song['song_count'] }}</span>
                        {{ song['song_count'] }}
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            </table>
          </div>
      </div>

{% endblock %}
